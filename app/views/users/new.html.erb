<h1>Sign Up Form</h1><br><br>

<%= form_for (@user) do |f| %>
  <p><%= f.label :name, "What is your name?" %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :tickets, "How many tickets do you have?" %></p>
  <p><%= f.number_field :tickets %></p>

  <b><p><%= f.label :height, "How tall are you?" %> (in inches)</p></b>
  <p><%= f.number_field :height %></p>

  <b><p><%= f.label :happiness, "How happy are you?" %>(1-5 scale)</p></b>
  <p><%= f.number_field :happiness %></p>

  <b><p><%= f.label :nausea, "How nauseous are you?" %> (1-5 scale)</p></b>
  <p><%= f.number_field :nausea %></p>

  <%= f.label :admin, "Check here if you are a park owner" %>
  <p><%= f.check_box :admin %></p>

  <p><%= f.label :password %></p>
  <%= f.password_field :password %>

  <br><br><p><%= f.submit "Create User" %></p><br><br>
<% end %>
