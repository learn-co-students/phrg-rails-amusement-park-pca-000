<h1>Amusement Park</h1>

<% if @ride %>
  <%= flash[:notice] %>
<% end %>

<h2>Name: <%= @user.name %> - <%= "ADMIN" if @user.admin %></h1></h2>
<% unless @user.happiness.nil? || @user.nausea.nil? %>
  Mood: <%= @user.mood %>
<% end %>
<h3>Happiness: <%= @user.happiness %></h3>
<h3>Tickets: <%= @user.tickets %></h3>
<h3>Height: <%= @user.height %></h3>

<%= link_to "See attractions", attractions_path %>
<%= link_to "Log Out", session_path, method: :delete %>
