<b><%= @attraction.name %><br><br></b>
  <%if @user.admin%>
    <%=link_to "Edit Attraction", edit_attraction_path(@attraction)%>
  <%else%>
    <%=form_tag ({controller: 'attractions', action: 'ride', method: 'post'}) do %>
    <%=hidden_field_tag 'attraction_id', params[:id]%>
    <p>Ticket Cost:
      <%= @attraction.tickets %></p>

    <p>Height Requirement:
      <%= @attraction.min_height %>
      inches</p>

    <p>Nausea Rating:
      <%= @attraction.nausea_rating %></p>

    <p>Happiness Rating:
      <%= @attraction.happiness_rating %></p>
    <%=submit_tag "Go on this ride"%>
  <%end%>
<%end%>
