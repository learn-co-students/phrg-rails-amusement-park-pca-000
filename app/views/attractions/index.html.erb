<b><h1>Listing Attractions</h1></b><br>

<% @attractions.each do |attraction| %>
  <b><p><%= attraction.name %></p></b>

  <% if @user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
    <p>Ticket Cost: <%= attraction.tickets %></p>
  <% else %>
    <p><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></p><br>
  <% end %>
<% end %>

<% if @user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
